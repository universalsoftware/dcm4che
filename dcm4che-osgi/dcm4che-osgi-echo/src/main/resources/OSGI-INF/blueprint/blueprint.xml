<blueprint
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <!-- this is the java class implementing the Echo Dicom Service -->
    <bean id="echoServiceImpl"
        class="org.dcm4che3.sample.osgi.echo.impl.CEchoSCPImpl"
        init-method="init"
        destroy-method="destroy"
        activation="eager">
        <property name="echoDeviceService" ref="echoDeviceService" />
    </bean>

    <reference id="echoDeviceService"
        interface="org.dcm4che3.sample.osgi.device.EchoDeviceService" />

</blueprint>